<Application
    x:Class="NES.Demo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:NES.Demo"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Nes.Core;component/Themes/Basic/Converters.xaml" />

                <ResourceDictionary Source="pack://application:,,,/Nes.Core;component/Themes/Basic/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nes.Core;component/Themes/Basic/Colors.xaml" />

                <ResourceDictionary Source="pack://application:,,,/Nes.Core;component/Themes/Styles/Label.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Nes.Core;component/Themes/Styles/Button.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
