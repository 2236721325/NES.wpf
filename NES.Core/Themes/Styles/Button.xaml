                            Grid.Row="1"
                            Grid.Column="2"
                            Background="{TemplateBinding BorderBrush}" />


                        <Grid
                            Grid.Row="1"
                            Grid.Column="1"
                            Background="{TemplateBinding Background}">


                            <Grid.RowDefinitions>
                                <RowDefinition Height="{TemplateBinding Property=BorderThickness, Converter={StaticResource ThicknessToGridHeight}}" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{TemplateBinding Property=BorderThickness, Converter={StaticResource ThicknessToGridHeight}}" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>


                            <Grid
                                x:Name="grid_0_0"
                                Grid.Row="0"
                                Grid.Column="0"
                                Background="{TemplateBinding Background}" />

                            <Grid
                                x:Name="grid_1_0"
                                Grid.Row="1"
                                Grid.Column="0"
                                Background="{TemplateBinding Background}" />
                            <Grid
                                x:Name="grid_2_0"
                                Grid.Row="2"
                                Grid.Column="0"
                                Background="{StaticResource ButtonPrimaryShadow}" />
                            <Grid
                                x:Name="grid_0_1"
                                Grid.Row="0"
                                Grid.Column="1"
                                Background="{TemplateBinding Background}" />


                            <Grid
                                x:Name="grid_2_1"
                                Grid.Row="2"
                                Grid.Column="1"
                                Background="{StaticResource ButtonPrimaryShadow}" />
                            <Grid
                                x:Name="grid_0_2"
                                Grid.Row="0"
                                Grid.Column="2"
                                Background="{StaticResource ButtonPrimaryShadow}" />
                            <Grid
                                x:Name="grid_1_2"
                                Grid.Row="1"
                                Grid.Column="2"
                                Background="{StaticResource ButtonPrimaryShadow}" />
                            <Grid
                                x:Name="grid_2_2"
                                Grid.Row="2"
                                Grid.Column="2"
                                Width="{TemplateBinding Property=BorderThickness,
                                                        Converter={StaticResource ThicknessToDouble}}"
                                Height="{TemplateBinding Property=BorderThickness,
                                                         Converter={StaticResource ThicknessToDouble}}"
                                Background="{StaticResource ButtonPrimaryShadow}" />




                            <ContentPresenter
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5,7"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />


                        </Grid>




                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ButtonPrimaryEnter}" />

                            <Setter TargetName="grid_2_2" Property="Grid.Width" Value="{Binding Path=(attach:ButtonAttach.EnterShadow), RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="grid_2_2" Property="Grid.Height" Value="{Binding Path=(attach:ButtonAttach.EnterShadow), RelativeSource={RelativeSource TemplatedParent}}" />



                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="grid_0_0" Property="Grid.Background" Value="{StaticResource ButtonPrimaryShadow}" />
                            <Setter TargetName="grid_0_1" Property="Grid.Background" Value="{StaticResource ButtonPrimaryShadow}" />
                            <Setter TargetName="grid_0_2" Property="Grid.Background" Value="{StaticResource ButtonPrimaryShadow}" />
                            <Setter TargetName="grid_1_0" Property="Grid.Background" Value="{StaticResource ButtonPrimaryShadow}" />
                            <Setter TargetName="grid_2_0" Property="Grid.Background" Value="{StaticResource ButtonPrimaryShadow}" />
                            <Setter TargetName="grid_2_1" Property="Grid.Background" Value="{Binding Background, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="grid_2_2" Property="Grid.Background" Value="{Binding Background, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="grid_1_2" Property="Grid.Background" Value="{Binding Background, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="grid_1_2" Property="Grid.Background" Value="{Binding Background, RelativeSource={RelativeSource TemplatedParent}}" />

                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>




    </Style>



